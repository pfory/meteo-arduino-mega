<Window x:Class="SolarSystem.test"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="test" Height="300" Width="300">
    <Grid Margin="0,0,181,-62" Height="332" VerticalAlignment="Top">
        <Line  X1="50" Y1="50" X2="50" Y2="200" StrokeThickness="40" StrokeStartLineCap="Round" StrokeDashCap="Square" Margin="1,0,-1,0" >
            <Line.Stroke>
                <SolidColorBrush Color="Red"/>
            </Line.Stroke>
            <Line.Effect>
                <DropShadowEffect RenderingBias="Quality" Opacity="0.5" BlurRadius="10" ShadowDepth="10"/>
            </Line.Effect>
        </Line>
        <Ellipse HorizontalAlignment="Left" Height="100" Margin="0,160,0,0" VerticalAlignment="Top" Width="100" Fill="Red">
            <Ellipse.Effect>
                <DropShadowEffect RenderingBias="Quality" Opacity="0.5" BlurRadius="10" ShadowDepth="10"/>
            </Ellipse.Effect>
        </Ellipse>

        
    </Grid>
</Window>
