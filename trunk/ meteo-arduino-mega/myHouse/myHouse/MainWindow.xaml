<Window x:Class="myHouse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="750" Width="817">
    <Grid Margin="0,0,0,0">
        <TabControl HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top">
            <TabItem Header="1st floor">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,0">
                    <Rectangle x:Name="hallRect" HorizontalAlignment="Left" Height="250" Margin="155,423,0,0" Stroke="Black" VerticalAlignment="Top" Width="250"/>
                    <Rectangle x:Name="teraceRect" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="250" Margin="410,423,0,0" Stroke="Black" VerticalAlignment="Top" Width="150"/>
                    <Rectangle x:Name="livingRoomRect" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="400" Margin="155,18,0,0" Stroke="Black" VerticalAlignment="Top" Width="250"/>
                    <Rectangle x:Name="corridorRect" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="400" Margin="50,18,0,0" Stroke="Black" VerticalAlignment="Top" Width="100"/>
                    <Rectangle x:Name="workRoomRect" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="250" Margin="50,423,0,0" Stroke="Black" VerticalAlignment="Top" Width="100"/>
                    <Label x:Name="lblWorkroomTemp" Content="" HorizontalAlignment="Left" Margin="90,434,0,0" VerticalAlignment="Top" Width="45"/>
                    <Label x:Name="lblHallTemp" Content="" HorizontalAlignment="Left" Margin="331,434,0,0" VerticalAlignment="Top" Width="45"/>
                    <Label x:Name="lblLivingRoomTemp" Content="" HorizontalAlignment="Left" Margin="250,380,0,0" VerticalAlignment="Top" Width="45"/>
                    <Label x:Name="lblCorridorTemp" Content="" HorizontalAlignment="Left" Margin="90,380,0,0" VerticalAlignment="Top" Width="45"/>
                    <Ellipse x:Name="status" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="20" Stroke="Black" VerticalAlignment="Top" Width="20" Margin="10,10,0,0"/>
                </Grid>
            </TabItem>
            <TabItem Header="2nd floor">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
